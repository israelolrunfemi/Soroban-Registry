{
    "title": "Database",
    "uid": "soroban-db",
    "tags": [
        "soroban"
    ],
    "refresh": "30s",
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "panels": [
        {
            "id": 1,
            "type": "stat",
            "title": "Active DB Connections",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "soroban_db_pool_connections",
                    "legendFormat": "connections"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "thresholds": {
                        "steps": [
                            {
                                "value": 0,
                                "color": "green"
                            },
                            {
                                "value": 3,
                                "color": "yellow"
                            },
                            {
                                "value": 5,
                                "color": "red"
                            }
                        ]
                    }
                }
            }
        },
        {
            "id": 2,
            "type": "stat",
            "title": "DB Query p99",
            "gridPos": {
                "x": 6,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "histogram_quantile(0.99, sum(rate(soroban_db_query_duration_seconds_bucket[5m])) by (le))",
                    "legendFormat": "p99"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s"
                }
            }
        },
        {
            "id": 3,
            "type": "stat",
            "title": "DB Query Rate (op/s)",
            "gridPos": {
                "x": 12,
                "y": 0,
                "w": 6,
                "h": 4
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "sum(rate(soroban_db_query_duration_seconds_count[1m]))",
                    "legendFormat": "ops/s"
                }
            ]
        },
        {
            "id": 4,
            "type": "timeseries",
            "title": "Query Latency by Operation",
            "gridPos": {
                "x": 0,
                "y": 4,
                "w": 12,
                "h": 8
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum by (operation, le) (rate(soroban_db_query_duration_seconds_bucket[5m])))",
                    "legendFormat": "p95 {{ operation }}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s"
                }
            }
        },
        {
            "id": 5,
            "type": "timeseries",
            "title": "Active Connections Over Time",
            "gridPos": {
                "x": 12,
                "y": 4,
                "w": 12,
                "h": 8
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "soroban_db_pool_connections",
                    "legendFormat": "connections"
                }
            ]
        },
        {
            "id": 6,
            "type": "logs",
            "title": "DB Error Logs",
            "gridPos": {
                "x": 0,
                "y": 12,
                "w": 24,
                "h": 8
            },
            "datasource": "Loki",
            "targets": [
                {
                    "expr": "{app=\"soroban-registry\"} |= \"database\" |= \"ERROR\" | json"
                }
            ]
        }
    ]
}