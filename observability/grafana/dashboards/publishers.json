{
    "title": "Publishers",
    "uid": "soroban-publishers",
    "tags": [
        "soroban"
    ],
    "refresh": "1m",
    "time": {
        "from": "now-24h",
        "to": "now"
    },
    "panels": [
        {
            "id": 1,
            "type": "gauge",
            "title": "Contracts per Publisher",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 12,
                "h": 8
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "soroban_contracts_per_publisher",
                    "legendFormat": "{{ publisher }}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "min": 0,
                    "thresholds": {
                        "steps": [
                            {
                                "value": 0,
                                "color": "green"
                            },
                            {
                                "value": 10,
                                "color": "yellow"
                            },
                            {
                                "value": 50,
                                "color": "red"
                            }
                        ]
                    }
                }
            }
        },
        {
            "id": 2,
            "type": "bargauge",
            "title": "Top Publishers by Publish Rate",
            "gridPos": {
                "x": 12,
                "y": 0,
                "w": 12,
                "h": 8
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "topk(10, sum by (publisher) (rate(soroban_contracts_published_total[1h])))",
                    "legendFormat": "{{ publisher }}"
                }
            ],
            "options": {
                "orientation": "horizontal"
            }
        },
        {
            "id": 3,
            "type": "timeseries",
            "title": "New Publisher Contracts Over Time",
            "gridPos": {
                "x": 0,
                "y": 8,
                "w": 24,
                "h": 8
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "sum(rate(soroban_contracts_published_total[5m]))",
                    "legendFormat": "publish rate"
                }
            ]
        },
        {
            "id": 4,
            "type": "logs",
            "title": "Publisher Activity Logs",
            "gridPos": {
                "x": 0,
                "y": 16,
                "w": 24,
                "h": 8
            },
            "datasource": "Loki",
            "targets": [
                {
                    "expr": "{app=\"soroban-registry\"} |= \"publish\" | json | line_format \"{{.message}}\""
                }
            ]
        }
    ]
}