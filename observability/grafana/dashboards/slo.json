{
    "title": "SLO Dashboard",
    "uid": "soroban-slo",
    "tags": [
        "soroban",
        "slo"
    ],
    "refresh": "1m",
    "time": {
        "from": "now-7d",
        "to": "now"
    },
    "panels": [
        {
            "id": 1,
            "type": "gauge",
            "title": "Availability SLO (target: 99.9%)",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 8,
                "h": 6
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "1 - (sum(rate(soroban_http_requests_total{status=~\"5..\"}[7d])) / sum(rate(soroban_http_requests_total[7d])))",
                    "legendFormat": "availability"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percentunit",
                    "min": 0.99,
                    "max": 1,
                    "thresholds": {
                        "steps": [
                            {
                                "value": 0,
                                "color": "red"
                            },
                            {
                                "value": 0.999,
                                "color": "green"
                            }
                        ]
                    }
                }
            }
        },
        {
            "id": 2,
            "type": "gauge",
            "title": "Latency SLO â€” p95 < 200ms",
            "gridPos": {
                "x": 8,
                "y": 0,
                "w": 8,
                "h": 6
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum(rate(soroban_http_request_duration_seconds_bucket[1h])) by (le))",
                    "legendFormat": "p95"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s",
                    "thresholds": {
                        "steps": [
                            {
                                "value": 0,
                                "color": "green"
                            },
                            {
                                "value": 0.2,
                                "color": "red"
                            }
                        ]
                    }
                }
            }
        },
        {
            "id": 3,
            "type": "gauge",
            "title": "Error Budget Remaining (30d)",
            "gridPos": {
                "x": 16,
                "y": 0,
                "w": 8,
                "h": 6
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "1 - clamp_min(1 - (sum(rate(soroban_http_requests_total{status=~\"5..\"}[30d])) / sum(rate(soroban_http_requests_total[30d]))), 0) / 0.001",
                    "legendFormat": "budget %"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percentunit",
                    "thresholds": {
                        "steps": [
                            {
                                "value": 0,
                                "color": "red"
                            },
                            {
                                "value": 0.25,
                                "color": "yellow"
                            },
                            {
                                "value": 0.5,
                                "color": "green"
                            }
                        ]
                    }
                }
            }
        },
        {
            "id": 4,
            "type": "timeseries",
            "title": "Availability (7d Rolling)",
            "gridPos": {
                "x": 0,
                "y": 6,
                "w": 12,
                "h": 8
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "1 - (sum(rate(soroban_http_requests_total{status=~\"5..\"}[1h])) / sum(rate(soroban_http_requests_total[1h])))",
                    "legendFormat": "availability"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percentunit",
                    "min": 0.98
                }
            }
        },
        {
            "id": 5,
            "type": "timeseries",
            "title": "p95 Latency vs SLO (200ms)",
            "gridPos": {
                "x": 12,
                "y": 6,
                "w": 12,
                "h": 8
            },
            "datasource": "Prometheus",
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum(rate(soroban_http_request_duration_seconds_bucket[5m])) by (le))",
                    "legendFormat": "p95 actual"
                },
                {
                    "expr": "0.2",
                    "legendFormat": "SLO threshold"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s"
                }
            }
        }
    ]
}