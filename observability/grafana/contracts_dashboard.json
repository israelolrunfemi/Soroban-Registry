{
    "dashboard": {
        "uid": "soroban-contracts",
        "title": "Soroban Registry â€” Contracts",
        "timezone": "utc",
        "refresh": "10s",
        "panels": [
            {
                "title": "Contracts Published (rate)",
                "type": "timeseries",
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 0,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "rate(soroban_contracts_published_total[5m])",
                        "legendFormat": "published/s"
                    }
                ]
            },
            {
                "title": "Contracts Verified (rate)",
                "type": "timeseries",
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 8,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "rate(soroban_contracts_verified_total[5m])",
                        "legendFormat": "verified/s"
                    }
                ]
            },
            {
                "title": "Total Contracts",
                "type": "stat",
                "gridPos": {
                    "h": 8,
                    "w": 8,
                    "x": 16,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "soroban_contracts_total",
                        "legendFormat": "total"
                    }
                ]
            },
            {
                "title": "Verification Latency P99",
                "type": "timeseries",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                },
                "targets": [
                    {
                        "expr": "histogram_quantile(0.99, sum(rate(soroban_verification_latency_seconds_bucket[5m])) by (le))",
                        "legendFormat": "P99"
                    }
                ]
            },
            {
                "title": "Deploy vs Errors",
                "type": "timeseries",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                },
                "targets": [
                    {
                        "expr": "rate(soroban_contract_deploy_total[5m])",
                        "legendFormat": "deploys/s"
                    },
                    {
                        "expr": "rate(soroban_contract_deploy_errors_total[5m])",
                        "legendFormat": "errors/s"
                    }
                ]
            },
            {
                "title": "State Reads / Writes",
                "type": "timeseries",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 16
                },
                "targets": [
                    {
                        "expr": "rate(soroban_contract_state_reads_total[5m])",
                        "legendFormat": "reads/s"
                    },
                    {
                        "expr": "rate(soroban_contract_state_writes_total[5m])",
                        "legendFormat": "writes/s"
                    }
                ]
            },
            {
                "title": "Contracts by Category",
                "type": "piechart",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 16
                },
                "targets": [
                    {
                        "expr": "sum(soroban_contracts_by_category_total) by (category)",
                        "legendFormat": "{{category}}",
                        "instant": true
                    }
                ]
            }
        ]
    }
}